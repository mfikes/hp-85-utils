100 REM Loads BASIC code via GPIB
110 SET TIMEOUT 7;5000
120 ON TIMEOUT 7 GOTO 220
130 DIM A$[500]
140 DIM F$[502]
150 SDOPEN "/BAS/TEMPFILE.BAS",2,1
160 DISP "Paste code via 705 GPIB within  5 s and then wait 5 s."
170 ENTER 705 ; A$
180 DISP A$
190 SPRINTF F$,"%s%s",A$,SDEOL$
200 SDWRITE F$,1
210 GOTO 170
220 DISP "GPIB timeout. To load:"
230 DISP
240 DISP "SCRATCH"
250 DISP "SDGET "&CHR$(34)&"/BAS/TEMPFILE.BAS"&CHR$(34)
260 RESET 7
270 SDCLOSE 1
280 END
